<%- include('header') -%>


<div class="container-fluid">
    <button type="button" class="btn btn-secondary btn-sm btn-block"
    data-target="#teamselection">General Report</button>

    <div id="teamselection" class="  shadow-lg p-3 mb-5 bg-white rounded">
        <form id="mainForm" action="/report" class="needs-validation" novalidate>
            <div class="form-group">
                <label for="Division">Division</label>
                <select name="division" class="form-control form-control-sm division " name="division"
                    onchange="getTeams()" required>
                    <option value="">Select Division</option>
                    <option value="Senior Devision">Senior Devision</option>
                    <option value="Division 1">Division 1</option>
                    <option value="Division 2">Division 2</option>
                </select>
            </div>

            <div class="form-group">
                <label for="homeTeam">Home Team</label>
                <select class="form-control form-control-sm homeTeam " name="homeTeam">
                    <option value="">Select Home Team</option>
                </select>
            </div>


            <div class="form-group">
                <label for="visitors">Visitors</label>
                <select class="form-control form-control-sm awayTeam" id="home" name="awayTeam">
                    <option value="">Select Away Team</option>
                </select>
            </div>

            <input type="submit" value="Next" class="btn btn-primary">
        </form>
    </div>
</div>

<!-- javascript file -->

<script src="/teamselection.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
